

<div class="row">
  <div class="col-sm-6 col-md-7 col-md-offset-1">
    <div class="thumbnail thumbnail_left">
    </div>
  </div>
  <div class="col-sm-6 col-md-4 thumbnail_right">
  	<%= render 'shared/errors', obj: @user %>
  	<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-5">
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="col-sm-5">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-enter password" %>
        </div>
      </div>
      <div>
        <%= f.submit "Sign up", class: 'btn btn-primary btn-sm col-sm-10' %> 
      </div>
    <% end %>
    <% if !logged_in?%>
      <%= render 'login_modal' %>
    <% end %>
  </div>
</div>