<h1 align="center">My Lists</h1>

<div align="center">
  <%= will_paginate @user_lists%>
</div>
<div class="row">
  <div class="col-sm-6 col-md-2">
  	<div class="create_list_div">
      <p id="p02">Create a list. Start by entering a name </p>
      <%= form_for :list, url: lists_path, :html => {class: "form-horizontal", role: "form"} do |f| %>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_field :name, class: "form-control", placeholder: "e.g Running shoes", autofocus: true %>
          </div>
        </div>
        <div class="checkbox col-md-offset-1">
          <label><%= f.check_box :private %>Private list</label>
        </div>
        <div>
          <%= f.submit "Create list", class: 'btn btn-primary btn-sm col-sm-10 col-sm-offset-1' %> 
        </div>
      <% end %>
    </div>
  </div>
  <% @user_lists.each do |list| %>
    <div class="col-sm-6 col-md-2">
      <div class="list_div">
        <%= render 'lists/edit_modal', list: list %>
        <%= link_to list.name, list_path(list) %>
        <%= link_to list_path(list), :title => "Delete list", class: "btn btn-xs trashglyphicon", 
          method: :delete, data: {confirm: "Are you sure you want to delete this list?"} do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>