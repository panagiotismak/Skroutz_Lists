<h1 align="center">My Lists</h1>

<div class="row">
  <div class="col-sm-6 col-md-2 col-md-offset-1">
  	<div class="list_div">
      <p id="p02">Create your lists. Start by entering a name </p>
      <%= form_for(@list, :html => {class: "form-horizontal", role: "form"}, url: lists_path ) do |f| %>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            <%= f.text_field :name, class: "form-control", placeholder: "e.g Running shoes", autofocus: true %>
          </div>
        </div>
        <div>
          <%= f.submit "Create list", class: 'btn btn-primary btn-sm col-sm-10 col-sm-offset-1' %> 
        </div>
      <% end %>
    </div>
  </div>
  <% current_user.lists.each do |list| %>
    <div class="row">
      <div class="col-sm-6 col-md-2">
        <div class="well well-lg">
          <div class="show_list">
            <%= list.name %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>